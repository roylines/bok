<!DOCTYPE html>
<html ng-app>
	<head>
		<title>Bok</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.0/jquery.mobile-1.3.0.min.css" />
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script src="http://code.jquery.com/mobile/1.3.0/jquery.mobile-1.3.0.min.js"></script>
		<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.5/angular.min.js"></script>
		<script src="https://raw.github.com/tigbro/jquery-mobile-angular-adapter/master/compiled/jquery-mobile-angular-adapter.min.js"></script>
		<script src="js/controllers-mobile.js"></script>
	</head>
	<body>
		<div data-role="page">
			<div data-role="header">
				<h1>Pupils</h1>
			</div>
			<div data-role="content">
				<ul data-role="listview" data-filter="true" data-filter-placeholder="Filter pupils..." ng-controller="PupilsController">
					<li ng-repeat="pupil in pupils"><a href="index.html">{{pupil.name}}</a></li>
				</ul>
				<!-- <a href="lists-ul.html" data-role="button" data-icon="arrow-r" data-iconpos="right">Basic list example</a> -->
			</div>
		</div>
