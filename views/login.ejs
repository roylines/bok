<% include header %>
		<div data-role="page">
			<div data-role="header">
				<h1>User Login</h1>
			</div>
			<div data-role="content">
				<form action="login" method="post" data-ajax="false" >
					<div data-role="fieldcontain" class="ui-hide-label">
						<label for="username">Username:</label>
						<input id="username" type="text" name="username" value="" placeholder="Enter your username"/>
					</div>
					<div data-role="fieldcontain" class="ui-hide-label">
						<label for="password">Password:</label>
						<input id="password" type="password" name="password" value="" placeholder="And your password"/>
						<button data-icon="check">Login</button>
					</div>
				</form>
			</div>
		</div>
<% include footer %>